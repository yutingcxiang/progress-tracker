<% if flash[:message] %>
  <h6><%= flash[:message] %></h6>
<% end %>

<h3>Edit Study Session Details</h3>
  <form action="/my_study_sessions/<%= @study_session.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    Date: <input type="text" name="date" id="date" value=<%= @study_session.date %>><br>
    Hours Studied: <input type="text" name="hours" id="hours" value=<%= @study_session.hours %>><br>
    What did you learn? <br>
    <textarea name="summary" rows="10" cols="30" id="summary"><%= @study_session.summary %></textarea>
    <br>
    <input type="submit" id="submit" value="Update">
  </form>

  <form action="/my_study_sessions/<%=@study_session.id%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="delete">
    <input type="submit" id="submit" value="Delete">
  </form>

    <a href="/my_study_sessions/new"><input class="btn" type="button" value="New Study Session"></a>
    <br>
    <a href="/my_study_sessions"><input class="btn" type="button" value="Return to All Study Sessions"></a>
